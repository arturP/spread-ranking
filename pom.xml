				<configuration>
					<testFramework>JUNIT5</testFramework>
					<baseClassForTests>io.artur.interview.kanga.spread_ranking.infrastructure.external.KangaContractTestBase</baseClassForTests>
					<contractsDirectory>src/test/resources/contracts</contractsDirectory>
