					<testMode>EXPLICIT</testMode>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>convert</goal>
							<goal>generateTests</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			-->
		</plugins>
	</build>

</project>
